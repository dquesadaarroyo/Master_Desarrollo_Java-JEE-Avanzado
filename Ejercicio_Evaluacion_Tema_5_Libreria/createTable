CREATE TABLE `AUTOR` (
  `ID_AUTOR` bigint(20) NOT NULL AUTO_INCREMENT,
  `NOMBRE` varchar(30) NOT NULL,
  `NACIONALIDAD` varchar(30) NOT NULL,
  `COMENTARIOS` longtext NOT NULL,
  PRIMARY KEY (`ID_AUTOR`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8;

CREATE TABLE `AUTORES_LIBROS` (
  `ID_AUTOR` bigint(20) NOT NULL,
  `ID_LIBRO` bigint(20) NOT NULL,
  PRIMARY KEY (`ID_LIBRO`,`ID_AUTOR`),
  KEY `FKEECB8BF398FA7E5` (`ID_LIBRO`),
  KEY `FKEECB8BF38651227` (`ID_AUTOR`),
  CONSTRAINT `FKEECB8BF38651227` FOREIGN KEY (`ID_AUTOR`) REFERENCES `AUTOR` (`ID_AUTOR`),
  CONSTRAINT `FKEECB8BF398FA7E5` FOREIGN KEY (`ID_LIBRO`) REFERENCES `LIBRO` (`ID_LIBRO`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `DIRECCION` (
  `ID_DIRECCION` bigint(20) NOT NULL AUTO_INCREMENT,
  `CALLE` varchar(30) NOT NULL,
  `NUMERO` int(11) NOT NULL,
  `POBLACION` varchar(30) NOT NULL,
  `CP` int(11) NOT NULL,
  `PROVINCIA` varchar(30) NOT NULL,
  PRIMARY KEY (`ID_DIRECCION`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8;

CREATE TABLE `EDITORIAL` (
  `ID_EDITORIAL` bigint(20) NOT NULL AUTO_INCREMENT,
  `NOMBRE` varchar(30) NOT NULL,
  `NIF` varchar(9) NOT NULL,
  `ID_DIRECCION` bigint(20) NOT NULL,
  PRIMARY KEY (`ID_EDITORIAL`),
  KEY `FK37BF71A7432CA2C1` (`ID_DIRECCION`),
  CONSTRAINT `FK37BF71A7432CA2C1` FOREIGN KEY (`ID_DIRECCION`) REFERENCES `DIRECCION` (`ID_DIRECCION`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8;

CREATE TABLE `LIBRO` (
  `ID_LIBRO` bigint(20) NOT NULL AUTO_INCREMENT,
  `TITULO` varchar(30) NOT NULL,
  `ISBN` varchar(30) NOT NULL,
  `PUBLICACION` int(11) NOT NULL,
  `PRECIO` double NOT NULL,
  `DESCRIPCION` longtext NOT NULL,
  `ID_EDITORIAL` bigint(20) NOT NULL,
  PRIMARY KEY (`ID_LIBRO`),
  KEY `FK4512B62D94ACBEF` (`ID_EDITORIAL`),
  CONSTRAINT `FK4512B62D94ACBEF` FOREIGN KEY (`ID_EDITORIAL`) REFERENCES `EDITORIAL` (`ID_EDITORIAL`)
) ENGINE=InnoDB AUTO_INCREMENT=6 DEFAULT CHARSET=utf8;